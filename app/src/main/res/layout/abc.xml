<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:visibility="visible"
                                                   android:background="@color/mycolor"
                                                   android:id="@+id/linearLayout">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_marginVertical="24dp"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="Team A"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:ems="10"
                    android:layout_marginVertical="16dp"
                    android:id="@+id/texta" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    app:layout_constraintHorizontal_bias="0.49" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/scorea" app:layout_constraintVertical_bias="1.0"
                    android:textSize="30sp"/>
            <TextView
                    android:text="0"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_height="wrap_content" android:id="@+id/scorea" android:textSize="36sp"
                    android:textColor="@color/colorPrimary"/>
            <Button
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+3  points"
                    android:layout_marginVertical="16dp"
                    android:textSize="18sp"
                    android:gravity="center"

                    android:id="@+id/btn3a"
                    tools:ignore="MissingConstraints"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn2a"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp"/>
            <Button
                    android:padding="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+2  points"
                    android:layout_marginVertical="16dp"
                    android:textSize="18sp"
                    android:gravity="center"

                    android:id="@+id/btn2a"
                    tools:ignore="MissingConstraints"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn1a"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"/>
            <Button
                    android:padding="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+1  points"
                    android:layout_marginVertical="16dp"
                    android:textSize="18sp"
                    android:gravity="center"

                    android:id="@+id/btn1a"
                    tools:ignore="MissingConstraints"
                    android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/scorea"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp"/>

        </LinearLayout>
        <TextView android:layout_width="2dp"
                 android:background="@color/colorAccent"
                  android:layout_height="match_parent"/>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_marginVertical="24dp"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="Team A"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:ems="10"
                    android:layout_marginVertical="16dp"
                    android:id="@+id/textb" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    app:layout_constraintHorizontal_bias="0.49" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/scorea" app:layout_constraintVertical_bias="1.0"
                    android:textSize="30sp"/>
            <TextView
                    android:text="0"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_height="wrap_content" android:id="@+id/scoreb" android:textSize="36sp"
                    android:textColor="@color/colorPrimary"/>
            <Button
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+3  points"
                    android:layout_marginVertical="16dp"
                    android:textSize="18sp"
                    android:gravity="center"

                    android:id="@+id/btn3b"
                    tools:ignore="MissingConstraints"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn2a"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp"/>
            <Button
                    android:padding="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+2  points"
                    android:layout_marginVertical="16dp"
                    android:textSize="18sp"
                    android:gravity="center"

                    android:id="@+id/btn2b"
                    tools:ignore="MissingConstraints"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn1a"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"/>
            <Button
                    android:padding="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+1  points"
                    android:layout_marginVertical="16dp"
                    android:textSize="18sp"
                    android:gravity="center"

                    android:id="@+id/btn1b"
                    tools:ignore="MissingConstraints"
                    android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/scorea"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp"/>

        </LinearLayout>
    </LinearLayout>


    <Button
            android:text="reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="120dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.426"
    />
</androidx.constraintlayout.widget.ConstraintLayout>